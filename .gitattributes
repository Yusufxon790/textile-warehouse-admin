# Count only PHP (including Blade)
*.php linguist-detectable=true
*.blade.php linguist-language=PHP

# Ignore vendor, node_modules, public assets, and resources
/vendor/** linguist-detectable=false
/node_modules/** linguist-detectable=false
/public/** linguist-detectable=false
/resources/** linguist-detectable=false

# Ignore config/lock files
*.json linguist-detectable=false
*.lock linguist-detectable=false
*.yml linguist-detectable=false
*.yaml linguist-detectable=false

# Ignore SCSS and LESS from language stats
*.scss linguist-detectable=false
*.less linguist-detectable=false
/resources/sass/** linguist-detectable=false
/resources/scss/** linguist-detectable=false
/resources/less/** linguist-detectable=false
